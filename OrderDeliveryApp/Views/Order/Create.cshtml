@model OrderDeliveryApp.Models.Order

@{
    ViewData["Title"] = "Создать новый заказ";
}

<h2>Создать новый заказ</h2>

<form asp-action="Create">
    <div class="form-group mb-3">
        <label asp-for="SenderCity" class="control-label"></label>
        <input asp-for="SenderCity" class="form-control" />
        <span asp-validation-for="SenderCity" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="SenderAddress" class="control-label"></label>
        <input asp-for="SenderAddress" class="form-control" />
        <span asp-validation-for="SenderAddress" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ReceiverCity" class="control-label"></label>
        <input asp-for="ReceiverCity" class="form-control" />
        <span asp-validation-for="ReceiverCity" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ReceiverAddress" class="control-label"></label>
        <input asp-for="ReceiverAddress" class="form-control" />
        <span asp-validation-for="ReceiverAddress" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Weight" class="control-label"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="PickupDate" class="control-label"></label>
        <input asp-for="PickupDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="PickupDate" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <input type="submit" value="Создать" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Вернуться к списку заказов</a>
</div>